# Environment Configuration Example
# Copy to .env and update values

# Application
DEBUG=false
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://user:password@db:5432/i_ascap
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000"]

# Data paths (inside container)
DATA_DIR=/app/data
LINEAGE_CSV_PATH=/app/data/v1/district_lineage.csv

# Analytics
BOOTSTRAP_ITERATIONS=1000
CONFIDENCE_LEVEL=0.95

# Versioning
DATASET_VERSION=v1.5_harmonized
BOUNDARY_VERSION=2024-01-15
